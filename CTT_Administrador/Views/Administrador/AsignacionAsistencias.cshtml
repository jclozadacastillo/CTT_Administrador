
@{
    ViewData["Title"] = "Asignar Asistencias";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid" id="content" hidden>
    <div class="row">
        <div class="col-auto me-0 pe-0 form-title">
            <h4>Asignar Asistencias</h4>
        </div>
    </div>
    <hr>
    <form id="frmDatos" enctype="multipart/form-data">
        <div class="row">
            <div class="col-sm-6">
                <label class="fs-sm">Periodo</label>
                <select class="form-select form-select-sm" id="idPeriodo" name="idPeriodo" onchange="comboCursos()">
                    <option value="">Seleccione</option>
                </select>
            </div>
            <div class="col-sm-6">
                <label class="fs-sm">Curso</label>
                <select class="form-select form-select-sm" id="idGrupoCurso" name="idGrupoCurso" onchange="comboCursosAsociados()">
                    <option value="">Seleccione un periodo</option>
                </select>
            </div>
            <div class="col-sm-6">
                <label class="fs-sm">Módulo</label>
                <select class="form-select form-select-sm" id="idCurso" name="idCurso" onchange="comboParalelos()">
                    <option value="">Seleccione un curso</option>
                </select>
            </div>
            <div class="col-sm-4">
                <label class="fs-sm">Paralelo</label>
                <select class="form-select form-select-sm" id="paralelo" name="paralelo" onchange="listar()">
                    <option value="">Seleccione un módulo</option>
                </select>
            </div>
            <div class="col-sm-auto">
                <br />
                <button hidden type="button" class="btn btn-primary btn-sm" onclick="guardarTodo()" id="btnGuardarTodo"><i class="bi-save2 me-1"></i>Guardar Todo</button>
            </div>
        </div>
    </form>
    <div class="table-responsive mt-4">
        <div class="col-sm-4 my-1 d-inline-flex">
            <i class="bi-search me-3 fs-sm pt-1"></i><input class="form-control form-control-sm" placeholder="Busqueda" onkeyup="buscarEnTabla(this.value)" />
        </div>
        <table class="table table-sm table-condensed w-100
            table-light table-hover table-custom" id="tableDatos">
            <thead>
            </thead>
            <tbody>
                <tr><td colspan="11" class="text-center">Lista vacia</td></tr>
            </tbody>
        </table>
    </div>

</div>
<script defer src="~/js/Administrador/siteAsignacionAsistencias.js?v=@DateTime.Now.Ticks"></script>

