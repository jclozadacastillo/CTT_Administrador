@{
    ViewData["Title"] = "Oferta Académica";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid" id="content" hidden>
    <div class="row">
        <div class="col-auto me-0 pe-0 form-title">
            <h4>Oferta Académica por Periodo</h4>
        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-sm-8">
            <label class="fs-sm fw-600">Periodo Académico</label>
            <select class="form-select form-select-sm" name="idPeriodo" id="idPeriodo" onchange="listar()">
                <option value="">Seleccione</option>
            </select>
        </div>
        <div class="col-auto ">
            <br />
            <button class="btn btn-sm btn-primary btn-new" title="Nuevo registro" id="btnAgregar" onclick="nuevo()">
                <i class="bi-plus"></i> Agregar Oferta
            </button>
        </div>
    </div>
    <hr />
    <div class="row mt-3">
        <div class="col-sm-12">
            <div class="table-responsive-sm">
                <table class="table table-sm table-condensed w-100
            table-light table-hover table-custom" id="tableDatos"></table>
            </div>
        </div>

    </div>

    <div class="modal fade" id="modalDatos" tabindex="-1" aria-labelledby="modalDatosLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header py-2">
                    <h1 class="modal-title" id="modalDatosLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="frmDatos">
                        <div class="row">
                            <div class="col-sm-12" id="datosDiplomado"></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-8 mt-1">
                                <label class="fs-sm text-primary">Curso o Diplomado</label>
                                <select class="form-select form-select-sm" name="idCurso" id="idCurso">
                                    <option value="">Seleccione</option>
                                </select>
                            </div>
                            <div class="col-sm-4 mt-1">
                                <label class="fs-sm text-primary">Modalidad</label>
                                <select class="form-select form-select-sm" name="idModalidad" id="idModalidad">
                                    <option value="">Seleccione</option>
                                </select>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label class="fs-sm">Cohorte</label>
                                    <input class="form-control form-control-sm" id="cohorte" name="cohorte" max="50"/>
                                    <div class="invalid-feedback">
                                        *Campo requerido
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="fs-sm">Fecha Inicio Matriculas</label>
                                <input type="date" class="form-control form-control-sm" id="fechaInicioMatricula" name="fechaInicioMatricula">
                                <div class="invalid-feedback">
                                    *Campo requerido
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="fs-sm">Fecha Fin Matriculas</label>
                                <input type="date" class="form-control form-control-sm" id="fechaFinMatricula" name="fechaFinMatricula">
                                <div class="invalid-feedback">
                                    *Campo requerido
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="fs-sm">Fecha Inicio Clases</label>
                                <input type="date" class="form-control form-control-sm" id="fechaInicioCurso" name="fechaInicioCurso">
                                <div class="invalid-feedback">
                                    *Campo requerido
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="fs-sm">Fecha Fin Clases</label>
                                <input type="date" class="form-control form-control-sm" id="fechaFinCurso" name="fechaFinCurso">
                                <div class="invalid-feedback">
                                    *Campo requerido
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-secondary btn-sm" data-cerrar data-bs-dismiss="modal">
                        Cerrar
                    </button>
                    <button type="button" class="btn btn-primary btn-sm" data-guardar onclick="guardar()">
                        Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script defer src="~/js/administrador/siteOfertaAcademica.js?v=@DateTime.Now.Ticks"></script>

