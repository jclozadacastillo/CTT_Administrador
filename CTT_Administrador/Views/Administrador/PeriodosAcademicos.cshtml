@{
    ViewData["Title"] = "Periodos Académicos";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid" id="content" hidden>
    <div class="row">
        <div class="col-auto me-0 pe-0 form-title">
            <h4>Periodos Académicos</h4>
        </div>
        <div class="col-auto ">
            <button class="btn btn-sm btn-primary btn-new" title="Nuevo registro" onclick="nuevo()">
                <i class="bi-plus"></i> Agregar
            </button>
        </div>
    </div>
    <hr>
    <div class="row mt-3">
        <div class="col-sm-12">
            <div class="table-responsive-sm">
                <table class="table table-sm table-condensed w-100
            table-light table-hover table-custom" id="tableDatos"></table>
            </div>
        </div>

    </div>

    <div class="modal fade" id="modalDatos" tabindex="-1" aria-labelledby="modalDatosLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header py-2">
                    <h1 class="modal-title" id="modalDatosLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="frmDatos">
                        <div class="row">
                            <div class="col-sm-12">
                                <label class="fs-sm">Periodo</label>
                                <input type="text" class="form-control form-control-sm" id="detalle" name="detalle"
                                       maxlength="100">
                            </div>
                            <div class="col-sm-6">
                                <label class="fs-sm">Fecha Inicio</label>
                                <input type="date" class="form-control form-control-sm" id="fechaInicio" name="fechaInicio" />
                            </div>
                            <div class="col-sm-6">
                                <label class="fs-sm">Fecha Final</label>
                                <input type="date" class="form-control form-control-sm" id="fechaFin" name="fechaFin" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-secondary btn-sm" data-cerrar data-bs-dismiss="modal">
                        Cerrar
                    </button>
                    <button type="button" class="btn btn-primary btn-sm" data-guardar onclick="guardar()">
                        Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script defer src="~/js/administrador/sitePeriodosAcademicos.js?v=@DateTime.Now.Ticks"></script>
