@{
    ViewData["Title"] = "Tipos de cursos";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid" id="content" hidden>
    <div class="row">
        <div class="col-auto me-0 pe-0 form-title">
            <h4>Tipos de cursos</h4>
        </div>
        <div class="col-auto ">
            <button class="btn btn-sm btn-primary btn-new" title="Nuevo registro" onclick="nuevo()">
                <i class="bi-plus"></i> Agregar
            </button>
        </div>
    </div>
    <hr>
    <div class="row mt-3">
        <div class="col-sm-12">
            <div class="table-responsive-sm">
                <table class="table table-sm table-condensed w-100
            table-light table-hover table-custom" id="tableDatos"></table>
            </div>
        </div>

    </div>

    <div class="modal fade" id="modalDatos" tabindex="-1" aria-labelledby="modalDatosLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header py-2">
                    <h1 class="modal-title" id="modalDatosLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="frmDatos">
                        <div class="row">
                            <div class="col-sm-12">
                                <label class="fs-sm">Tipo de curso</label>
                                <input type="text" class="form-control form-control-sm" id="tipoCurso" name="tipoCurso"
                                    maxlength="100">
                            </div>
                            <div class="col-sm-12 mt-2">
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" data-validate="no-validate" name="tipo"
                                        id="esDiplomado">
                                    <label class="form-check-label fs-sm" for="esDiplomado">
                                        Diplomado
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" data-validate="no-validate" name="tipo"
                                        id="esCurso">
                                    <label class="form-check-label fs-sm" for="esCurso">
                                        Curso
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-secondary btn-sm" data-cerrar data-bs-dismiss="modal">
                        Cerrar
                    </button>
                    <button type="button" class="btn btn-primary btn-sm" data-guardar onclick="guardar()">
                        Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script defer src="~/js/administrador/siteTiposCursos.js?v=@DateTime.Now.Ticks"></script>

