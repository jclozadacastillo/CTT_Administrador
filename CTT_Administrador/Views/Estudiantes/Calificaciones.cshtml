
@{
    ViewData["Title"] = "<i class='bi-pencil-square me-3'></i>Calificaciones";
    Layout = "~/Views/Shared/_LayoutEstudiantes.cshtml";
}

<div class="col-12 col-md-12">
    <div class="card shadow mb-1">
        <div class="card-header text-primary pb-0">
            <i class="bi-check-circle-fill me-2 fs-xxl float-start"></i><h3 class="text-primary pt-card-header">Selecciona tu <strong class="fs-lg">CURSO</strong> O <strong class="fs-lg">DIPLOMADO</strong></h3>
        </div>
        <div class="card-body pt-1">
            <form class="row" id="frmDatos">
                <div class="col-sm-12">
                    <select class="form-select" id="idMatricula" name="idMatricula" onchange="mostrarCalificaciones()">
                        <option value=''>Seleccione</option>
                    </select>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="col-12 col-md-12" id="calificaciones" hidden>
    <div class="card shadow">
        <div class="card-body pt-3">
            <div class="row border rounded py-3 px-2" id="datosCurso">
                
            </div>
        </div>
    </div>
</div>

<script defer src="~/js/estudiantes/siteCalificaciones.js?v=@DateTime.Now.Ticks"></script>
