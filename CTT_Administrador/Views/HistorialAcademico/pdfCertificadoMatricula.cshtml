@{
    Layout = null;
    var _datos = Model;
    string capitalizar(string texto)
    {
        return char.ToUpper(texto[0]) + texto.Substring(1);
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CERTIFICADO DE MATRICULA #@_datos.idMatricula.ToString().PadLeft(7, '0')</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <style>
        body {
            padding: 0;
            margin: 0;
            width: 771px;
            min-height: 1100px;
            font-family: 'Inter',sans-serif;
            font-size: 11px;
            font-optical-sizing: auto;
        }

        .w-100 {
            width: 100%;
        }

        .text-white {
            color: white !important;
        }

        .link {
            text-decoration: none;
        }

        .fw-bold {
            font-weight: 500;
        }

        table {
            border-collapse: collapse;
        }

            table tr td {
                border: none;
            }

        .text-end {
            text-align: right;
        }

        .pe-3 {
            padding-right: 10px;
        }

        .ps-3 {
            padding-left: 10px;
        }

        .ps-2 {
            padding-left: 5px;
        }

        .pe-2 {
            padding-right: 5px;
        }

        .pe-5 {
            padding-right: 40px;
        }

        i {
            font-size: 15px;
        }

        .text-center {
            text-align: center;
        }

        .mt-3 {
            margin-top: 10px;
        }

        .mt-4 {
            margin-top: 20px;
        }

        .ms-3 {
            margin-left: 20px;
        }

        .bg-primary {
            background-color: #03498F;
        }

        .text-primary {
            color: #03498F;
        }

        .line-right {
            right: 0;
            position: absolute;
            width: 12px;
            height: 1123px;
            background-color: #03498F;
        }

        .header {
            position: absolute;
            top: -82px;
            height: 69px;
            width: 640px;
            background-color: #03498F;
            margin-top: 100px;
            border-bottom-right-radius: 64px;
        }

        .main {
            position: absolute;
            top: 145px;
            left: 0;
            width: 795px;
        }

        .underline {
            text-decoration: underline;
        }

        table {
            border-collapse: collapse;
        }

        .mx-auto {
            margin-left: auto;
            margin-right: auto;
        }

        .mb-lg {
            margin-bottom: 82px;
        }

        .mb-md {
            margin-bottom: 82px;
        }

        .parrafo {
            width: 560px;
            font-size: 13px;
        }

        .justify {
            text-align: justify;
            hyphens: auto;
            -webkit-hyphens: auto;
            word-spacing: -0.05em;
            line-height: 16px;
        }

        .line-white {
            width: 1px;
            height: 15px;
            background-color: white;
            position: absolute;
            margin-top: 3px;
            margin-left: -22px;
        }

        .watermark-logos {
            top: 361px;
            position: absolute;
            width: 795px;
            text-align: center;
            z-index: -1;
            opacity: 0.19;
        }

        .watermark-fingerprint {
            position: fixed;
            z-index: -1;
            opacity: 0.19;
            left: -200px;
            bottom: -800px;
        }

        .footer-start {
            position: absolute;
            bottom: 0;
            left: 19px;
        }

        .footer-end {
            position: absolute;
            bottom: 0;
            right: 30px;
        }

        .qr-code {
            position: absolute;
            bottom: -10px;
            right: 50px;
        }
    </style>
</head>
<body>
    @*     <div class="w-100 text-end">
    <img src="~/lib/utilities/toast/img/logo-azul.png" width="127" />
    </div> *@
    <div class="line-right"></div>
    <div class="header">
        <table style="height:100%;">
            <tr>
                <td style="padding-left:28px;"><img src="@($"{_datos.host}/lib/utilities/toast/img/logo-blanco-uniandes.png?v={DateTime.Now.Ticks}")" width="164" /></td>
                <td style="padding-left:19px"><img src="@($"{_datos.host}/lib/utilities/toast/img/logo-blanco.png?v={DateTime.Now.Ticks}")" width="109" /></td>
                <td style="padding-left:37px;">
                    <span style="color:white;line-height:3px">
                        <div class="line-white"></div>
                        <div style="height:10px"> <small style="font-size:12px;font-weight:300">Educación</small></div>
                        <b style="font-size:16px;letter-spacing:1px;">Continua</b>
                    </span>
                </td>
            </tr>
        </table>
    </div>
    <div class="watermark-logos">
        <img src="@($"{_datos.host}/lib/utilities/toast/img/logo-gris-uniandes.png?v={DateTime.Now.Ticks}")" width="640" />
        <img src="@($"{_datos.host}/lib/utilities/toast/img/logo-gris.png?v={DateTime.Now.Ticks}")" width="500" />
    </div>
    <div class="main">
        <table class="mx-auto mb-lg">
            <tr>
                <td class="text-primary" style="padding-bottom:0px;border-bottom:2px solid #03498F;font-size:20px;letter-spacing:-1px;font-weight:500">CERTIFICADO DE MATRICULA</td>
            </tr>
        </table>
        <div class="parrafo mx-auto mb-md">
            @capitalizar(DateTime.Now.ToLongDateString())
        </div>
        <div class="parrafo mx-auto justify">
            En Calidad de Coordinadora Nacional de Educación Continua del Centro de Transferencia y Desarrollo de Tecnología CTT DE LOS ANDES institución adscrita a la Universidad UNIANDES,
            Certifico que el Sr(a) <b>@_datos.estudiante</b> con C.C. <b>@_datos.documentoIdentidad</b>,
            se encuentra legalmente matriculado en el <b>@_datos.tipoCurso @(_datos.curso.ToString().Replace("DIPLOMADO", "").Replace("  ", " "))</b> el mismo
            que se desarrollará desde el <b>@(_datos.fechaInicioCurso.ToLongDateString())</b>  hasta el <b>@(_datos.fechaFinCurso.ToLongDateString())</b>, con una duración total de <b>@_datos.horasCurso</b> horas académicas en la modalidad <b>@_datos.modalidad</b>.
        </div>
        <div class="parrafo mx-auto" style="margin-top:25px;margin-bottom:50px;">
            Es todo lo que puedo certificar en honor a la verdad.
        </div>
        <div class="parrafo mx-auto text-center">
            Atentamente,
        </div>
        <div class="parrafo mx-auto text-center" style="padding-top:60px">
            <b>Ing. Jenny Barreno Mg.</b>
        </div>
        <div class="parrafo mx-auto text-center">
            <b>COORDINADORA NACIONAL DE EDUCACIÓN CONTINUA</b>
        </div>
    </div>
    <div class="footer-start">
        <table>
            <tr>
                <td class="bg-primary text-white text-center" style="padding:5px 5px 0px 5px;border-bottom:2px solid #03498F"><i class="bi-telephone" style="font-size:12px"></i></td>
                <td style="font-size:12px;font-weight:700;color:rgba(0,0,0,0.73);padding-left:10px">033 731 310</td>
            </tr>
            <tr>
                <td class="bg-primary text-white text-center" style="border-bottom:2px solid #03498F"><i class="bi-geo-alt-fill" style="font-size:12px"></i></td>
                <td style="font-size:12px;font-weight:700;color:rgba(0,0,0,0.73);padding-left:10px">KM 5 1/2 vía a Baños</td>
            </tr>
            <tr>
                <td class="bg-primary text-white text-center" style="border-bottom:2px solid #03498F"><i class="bi-globe2" style="font-size:12px"></i></td>
                <td style="font-size:12px;font-weight:700;color:rgba(0,0,0,0.73);padding-left:10px">www.cttdelosandes.com</td>
            </tr>
        </table>
    </div>
    <div class="footer-end">
        <table>
            <tr>
                <td class="text-center text-primary" style="padding:5px 5px 0px 5px"><i class="bi-facebook" style="font-size:12px"></i></td>
            </tr>
            <tr>
                <td class="text-center text-primary" style="padding:5px 5px 0px 5px"><i class="bi-instagram" style="font-size:12px"></i></td>
            </tr>
            <tr>
                <td class="text-center text-primary" style="padding:5px 5px 0px 5px"><i class="bi-twitter-x" style="font-size:12px"></i></td>
            </tr>
            <tr>
                <td class="text-center text-primary" style="padding:5px 5px 0px 5px"><i class="bi-youtube" style="font-size:12px"></i></td>
            </tr>
            <tr>
                <td class="text-center text-primary" style="padding:5px 5px 0px 5px"><i class="bi-tiktok" style="font-size:12px"></i></td>
            </tr>
        </table>
    </div>
    <div class="watermark-fingerprint">
        <img src="@($"{_datos.host}/lib/utilities/toast/img/ondas.png?v={DateTime.Now.Ticks}")" />
    </div>
    <div class="qr-code">
        <img src="data:image/bmp;base64,@_datos.qrCode" alt="QR" style="width: 109px;" />
    </div>
</body>
</html>