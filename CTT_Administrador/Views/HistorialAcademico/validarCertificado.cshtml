@{
    Layout = null;
    var _v = $"?v={DateTime.Now.Ticks}";
    var _datos = Model;
}
<!DOCTYPE html>
<html lang="es-ec">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>CTT DE LOS ANDES: VALIDACIÓN DE CERTIFICADO</title>
    <meta content="ctt,uniandes,andes,language,center" name="description">
    <meta content="ctt,uniandes,andes,language,center" name="keywords">
    <!-- Favicons -->
    <link href="~/lib/utilities/toast/img/icon.png" rel="icon">
    <link href="~/lib/utilities/toast/img/icon.png" rel="apple-touch-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
          rel="stylesheet">
    <link href="~/templates/admin/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/templates/admin/assets/css/style.css@_v" rel="stylesheet">
    <link href="~/lib/utilities/toast/toast.all.css@_v" rel="stylesheet" />
    <script defer src="~/templates/admin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js@_v"></script>

</head>
<body class="bg-login d-flex justify-content-center align-items-center" style="height:100vh">
    <div class="card col-sm-6 col-11 shadow-sm">
        <div class="card-body p-4">
            @if (_datos.idMatricula > 0)
            {
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-3">
                                <img src="~/lib/utilities/toast/img/logo-azul370.png" width="163" />
                            </div>
                            <div class="col-9 text-end pt-sm-3 pt-0">
                                <h3 class="fs-6 fw-bold">CERTIFICADO DE MATRÍCULA</h3>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-12">
                        <table class="mt-3 table table-striped table-sm " style="font-size:13px">
                            <tr>
                                <td width="5%" class="fw-bold pe-2 text-nowrap">MATRÍCULA:</td>
                                <td>#@_datos.idMatricula.ToString().PadLeft(7, '0')</td>
                            </tr>
                            <tr>
                                <td class="fw-bold pe-2 text-nowrap">DOCUMENTO:</td>
                                <td>@_datos.documentoIdentidad</td>
                            </tr>
                            <tr>
                                <td class="fw-bold pe-2 text-nowrap">ESTUDIANTE:</td>
                                <td>@_datos.estudiante</td>
                            </tr>
                            <tr>
                                <td class="fw-bold pe-2 text-nowrap">@_datos.tipoCurso:</td>
                                <td>@_datos.curso.ToUpper().Replace("DIPLOMADO", "").Replace("  ", " ")</td>
                            </tr>
                            <tr>
                                <td class="fw-bold pe-2 text-nowrap">MODALIDAD:</td>
                                <td>@_datos.modalidad</td>
                            </tr>
                            <tr>
                                <td class="fw-bold pe-2 text-nowrap">INICIO @_datos.tipoCurso:</td>
                                <td class="text-uppercase">@_datos.fechaInicioCurso.ToLongDateString()</td>
                            </tr>
                            <tr>
                                <td class="fw-bold pe-2 text-nowrap">FIN @_datos.tipoCurso:</td>
                                <td class="text-uppercase">@_datos.fechaFinCurso.ToLongDateString()</td>
                            </tr>
                            <tr>
                                <td class="fw-bold pe-2 text-nowrap">TOTAL HORAS:</td>
                                <td>@_datos.horasCurso</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-sm-12 text-center">
                        <div class="alert alert-success pb-1 pt-3">
                            <h1 class="bi-check-circle-fill"></h1>
                            <p>MATRICULA ENCONTRADA EN EL SISTEMA</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <div class="alert alert-danger mt-3 mx-3">
                            <h1 class="bi-x-circle-fill"></h1>
                            <p>EL CÓDIGO QR LEÍDO NO CORRESPONDE A NINGUNA MATRÍCULA</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>